<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>

	<Dialog
		id="carDialog"
		title="정기권 등록"
		contentWidth="30%"
		contentHeight="30%"
    >
		<content>
			<VBox>
				<f:SimpleForm id="registerCarinfo"
					editable="true"
					layout="ColumnLayout"
					columnsM="1"
					columnsL="1"
					columnsXL="1"
                    >
					<f:content>
						<Label text="차량구분"/>
						<Input id="inputTypeName" value="{registerModel>/TypeName}" required="true" change="onChange" editable="false" visible="true"/>

						<!-- <Select id="selTypeName" required="true" selectedKey="{RegisterModel>/TypeUuid}" editable="false">
							<items>
								<core:Item text="{TypeModel>/TypeName}" key="{TypeModel>/Uuid}"/>
							</items>
						</Select> -->
						<Label text="차량번호" />
						<Input id="inputNumberPlate" value="{registerModel>/NumberPlate}" required="true" change="onChange" editable="false"/>
						<Label text="차량종류" />
						<Input id="inputBrand" value="{registerModel>/Brand}" editable="false"/>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<footer>
			<Toolbar>
            <ToolbarSpacer/>
				<content>
					<Button id= "saveCar"
                            type="Accept"
							text="등록"
							press="onSaveCar" visible="true"/>
					
                    <Button id="cancelCar"
						text="취소"
						type="Reject"
						press="onCloseCar"
						ariaHasPopup="Dialog" visible="true"/>
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>