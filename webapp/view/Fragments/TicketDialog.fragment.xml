<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>

	<Dialog
		id="TicketDialog"
		title="할인권 구매"
		contentWidth="30%"
    >
		<content>
			<VBox width="100%" justifyContent="Center" alignItems="Center" class="sapUiMediumMarginTop">
				<HBox justifyContent="Center" width="100%" alignItems="Center" class="sapUiSmallMarginBottom">
					<Label text="차량번호" class="sapUiTinyMarginEnd"/>
					<Input id="carNumber" value="{registerModel>/NumberPlate}" required="true" change="onChange" editable="false" class="sapUiTinyMarginEnd" width="15em"/>
				</HBox>
				<HBox justifyContent="Center" width="100%" alignItems="Center" class="sapUiMediumMarginBottom">
					<Label text="티켓 종류" class="sapUiTinyMarginEnd"/>
					<Select id="selTypeName" required="true" selectedKey="{TicketModel>/Discountuuid}" class="sapUiTinyMarginEnd">
						<items>
							<core:Item text="1시간 주차 할인권" key="{TicketModel>/Discountuuid}"/> 
							<!-- {TicketModel>/DiscountName} -->
						</items>
					</Select>
					<core:Icon src="sap-icon://sys-minus" width="1em" class="sapUiTinyMarginEnd"/>
					<Input value="{TicketModel>/TotalCount}" width="2em" class="sapUiTinyMarginEnd"/>
					<core:Icon src="sap-icon://sys-add" width="1em" />
				</HBox>
			</VBox>
		</content>
		<footer>
			<Toolbar>
            <ToolbarSpacer/>
				<content>
					<Button id= "buyTicket"
                            type="Accept"
							text="구매"
							press="onbuyTicket" />
					
                    <Button id="cancelTicket"
						text="취소"
						type="Reject"
						press="onCloseTicket"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>