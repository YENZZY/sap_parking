<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>

	<Dialog
		id="TicketDialog"
		title="할인권 등록"
		contentWidth="32%"
    >
		<content>
			<VBox width="100%" justifyContent="Center" alignItems="Center" class="sapUiMediumMarginTop">
				<HBox justifyContent="Center" width="100%" alignItems="Center" class="sapUiSmallMarginBottom">
					<Label text="차량번호" class="sapUiTinyMarginEnd"/>
					<Input id="carNumber" value="{registerModel>/NumberPlate}" required="true" change="onChange" editable="false" class="sapUiTinyMarginEnd" width="19em"/>
				</HBox>
				<HBox justifyContent="Center" width="100%" alignItems="Center" class="sapUiMediumMarginBottom">
					<Label text="티켓 종류" class="sapUiTinyMarginEnd"/>
					<Select id="selTicketName"
							items="{discountModel>/}"
							selectedKey="{ticketModel>/Discountuuid}"
							width="12em"
							class="sapUiTinyMarginEnd"
							change="onSelTicketChange"
					>
						<core:Item key="{discountModel>Uuid}" text="{discountModel>DiscountName}" />
					</Select>
					<!-- <core:Icon src="sap-icon://sys-minus" width="1em" class="sapUiTinyMarginEnd"/> -->
					
					<!-- 티켓 남은개수 -->
					<Input id="totalTicket" value="{ticketModel>/TotalCount}" width="2em" class="sapUiTinyMarginEnd" editable="false"/>
					
					 <!-- 티켓 추가개수 -->
					<Input id="plusTicket" value="0" width="2em" class="sapUiTinyMarginEnd"/>
					<!-- <core:Icon src="sap-icon://sys-add" width="1em" class="sapUiTinyMarginEnd"/> -->
					<Button text="저장" width="4em" press="onSaveTicket"/>
				</HBox>
				<!-- <HBox>
					<Text id="displayDiscountUuid" text="할인권 UUID" />
					<Text id="displayTotalCount" text="총 개수" />
				</HBox> -->
			</VBox>
		</content>
		<footer>
			<Toolbar>
            <ToolbarSpacer/>
				<content>
					<Button id= "buyTicket"
                            type="Accept"
							text="구매"
							press="onBuyTicket" />
					
                    <Button id="cancelTicket"
						text="취소"
						type="Reject"
						press="onCloseTicket"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>