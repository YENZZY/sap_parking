<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
  height="100%">
  <Panel>
    <HBox alignItems="Center" width="100%" justifyContent="Center">
      <Input editable="false" value="1시간 주차 할인권" width="20em" class="sapUiSmallMarginEnd"/>
      <Input value="10" editable="false" width="2em" class="sapUiSmallMarginEnd"/>
      <core:Icon src="sap-icon://sys-add" class="sapUiSmallMargin"/>
      <Input value="{payModel>/}" width="2em" class="sapUiSmallMarginEnd"/>
      <core:Icon src="sap-icon://sys-minus"/>
    </HBox>
    <Button text="정산하기" press="onPay"></Button>
  </Panel>
</core:FragmentDefinition>
