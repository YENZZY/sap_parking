<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
>
	<Panel>
		<!-- 차량번호 조회 -->
		<HBox width="100%" justifyContent="Center" >
			<VBox height="18rem" class="sapUiSmallMarginEnd">
				<Input id="findNumber" placeholder="차량번호 4자리 입력" class="findNumber sapUiSmallMarginBottom"/>
				<Image width="14rem" height="13rem" src="https://img.freepik.com/premium-vector/car-parking-sign-parking-space-icon-parking-lot-car-parking-flat-style-vector-illustration-web-element_435184-1157.jpg"></Image>
			</VBox>
			<VBox  height="18rem">
				<HBox width="100%" height="4.5rem" justifyContent="Center" >
					<Button text="1" press="onClick" class="keyPad sapUiTinyMarginEnd "/>
					<Button text="2" press="onClick" class="keyPad sapUiTinyMarginEnd "/>
					<Button text="3" press="onClick" class="keyPad "/>
				</HBox>
				<HBox width="100%" height="4.5rem" justifyContent="Center" >
					<Button text="4" press="onClick" class="keyPad sapUiTinyMarginEnd "/>
					<Button text="5" press="onClick" class="keyPad sapUiTinyMarginEnd "/>
					<Button text="6" press="onClick" class="keyPad "/>
				</HBox>
				<HBox width="100%" height="4.5rem" justifyContent="Center" >
					<Button text="7" press="onClick" class="keyPad sapUiTinyMarginEnd "/>
					<Button text="8" press="onClick" class="keyPad sapUiTinyMarginEnd "/>
					<Button text="9" press="onClick" class="keyPad "/>
				</HBox>
				<HBox width="100%" height="4.5rem" justifyContent="Center" >
					<Button text="⌦" press="onClear" class="keyPad sapUiTinyMarginEnd " type="Reject"/>
					<Button text="0" press="onClick" class="keyPad sapUiTinyMarginEnd " />
					<Button text="⏎" press="onSearch" class="keyPad " type="Accept"/>
				</HBox>
			</VBox>
		</HBox>
	</Panel>
</core:FragmentDefinition>