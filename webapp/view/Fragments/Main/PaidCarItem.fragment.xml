<!-- 정산된 차량 내역 목록 -->
<Panel width="100%">
<OverflowToolbar>
    <Label text="정산 차량 현황" design="Bold"/>
    <ToolbarSpacer/>
<!-- <Button
    tooltip="Sort"
    icon="sap-icon://sort"
    press="onSort"/> -->
</OverflowToolbar>
    <Table id="PaidCarTable"
        inset="false"
        items="{
            path: 'paidModel>/',
            sorter: {
                path: 'NumberPlate'
            }
        }">
        <columns>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="차량번호" textAlign="Center" design="Bold"/>
            </Column>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="차량구분" textAlign="Center" design="Bold"/>
            </Column>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="입차시간" textAlign="Center" design="Bold"/>
            </Column>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="출차시간" textAlign="Center" design="Bold"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
            <cells>
                <Text text="{paidModel>NumberPlate}" textAlign="Center"/>
                <Text text="{paidModel>TypeName}" textAlign="Center"/>
                <Text
                    text="{
                        path: 'paidModel>EntryTime',
                        type: 'sap.ui.model.type.DateTime',
                        formatOptions: {
                            pattern: 'yyyy-MM-dd HH:mm:ss'
                        }
                    }"
                    textAlign="Center"
                />
                <Text
                    text="{
                        path: 'paidModel>ExitTime',
                        type: 'sap.ui.model.type.DateTime',
                        formatOptions: {
                            pattern: 'yyyy-MM-dd HH:mm:ss'
                        }
                    }"
                    textAlign="Center"
                />
            </cells>
            </ColumnListItem>
        </items>
    </Table>
    </Panel>
</core:FragmentDefinition>