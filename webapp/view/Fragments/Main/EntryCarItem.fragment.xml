<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
<!-- 정산된 차량 내역 목록 -->
<Panel width="100%">
<OverflowToolbar>
    <Label text="입차 차량 현황" design="Bold"/>
        <ToolbarSpacer/>
    <SearchField liveChange="onEntrycarSearch" width="20%" />
</OverflowToolbar>
    <Table id="EntryCarTable"
        inset="false"
        selectionChange="onSelectionChange"
        items="{
            path: 'entryModel>/',
            sorter: {
                path: 'EntryTime',
                descending: true
            }
        }"
    >
    <infoToolbar>
				<OverflowToolbar visible="false" id="idInfoToolbarEntry">
					<Label id="idFilterLabelEntry" />
				</OverflowToolbar>
	</infoToolbar>
        <columns>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="차량번호" textAlign="Center" design="Bold"/>
            </Column>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="차량구분" textAlign="Center" design="Bold"/>
            </Column>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="차량종류" textAlign="Center" design="Bold"/>
            </Column>
            <Column width="12rem" minScreenWidth="Tablet" hAlign="Center" demandPopin="true">
                <Label text="입차시간" textAlign="Center" design="Bold"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
            <cells>
            <Text text="{entryModel>NumberPlate}" textAlign="Center"/>
            <Text text="{entryModel>TypeName}" textAlign="Center"/>
            <Text text="{entryModel>Brand}" textAlign="Center"/>
            <Text
                    text="{
                        path: 'entryModel>EntryTime',
                        type: 'sap.ui.model.type.DateTime',
                        formatOptions: {
                            pattern: 'yyyy-MM-dd HH:mm:ss'
                        }
                    }"
                    textAlign="Center"
                />
            </cells>
            </ColumnListItem>
        </items>
    </Table>
    </Panel>
</core:FragmentDefinition>