<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
<!-- 정산된 차량 내역 목록 -->
<Panel width="40%">
<OverflowToolbar>
    <Label text="정기권 차량 현황" design="Bold"/>
        <ToolbarSpacer/>
    <SearchField liveChange="onVipcarSearch" width="50%" />
</OverflowToolbar>
    <Table id="VipcarTable"
        inset="false"
        selectionChange="onSelectionChange"
        items="{
            path: 'vipcarModel>/',
            sorter: {
                path: 'NumberPlate'
            }
        }">
        <columns>
            <Column width="12rem" hAlign="Center">
            <Label text="차량번호" textAlign="Center"  design="Bold"/>
            </Column>
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
            <cells>
            <Text	text="{vipcarModel>NumberPlate}" textAlign="Center"/>
            </cells>
            </ColumnListItem>
        </items>
    </Table>
    </Panel>
</core:FragmentDefinition>