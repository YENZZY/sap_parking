<Button
    tooltip="Sort"
    icon="sap-icon://sort"
    press="onSort"/>
</OverflowToolbar>
    <Table id="myticketTable"
        inset="false"
        items="{
            path: 'myticketModel>/',
            sorter: {
                path: 'DiscountName'
            }
