        <columns>
            <Column
            width="12rem">
            <Text text="할인권명" textAlign="Center"/>
            </Column>
            <Column
            width="12rem">
            <Text text="할인시간" textAlign="Center"/>
            </Column>
            <Column
            width="12rem">
            <Text text="사용한 개수" textAlign="Center"/>
            </Column>
            <!-- <Column
            width="12em">
            <Text text="사용개수" textAlign="Center"/>
            </Column>
             <Column
            width="12em">
            <Text text="할인권 사용" textAlign="Center"/>
            </Column> -->
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
            <cells>
              <Text	text="{myticketModel>DiscountName}" textAlign="Center"/>
              <Text	text="{myticketModel>DiscountTime}" textAlign="Center"/>
              <Text	text="{myticketModel>UsedCount}" textAlign="Center"/>
              <!-- <Text	text="{myticketModel>UsedCount}"/> -->
             
