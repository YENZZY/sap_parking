<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    height="100%"
    >
    <Panel height="100%">
      <OverflowToolbar>
			  <Title text="차량 조회"/>
      </OverflowToolbar>
        <HBox width="100%" justifyContent="Center" class="sapUiLargeMarginTop">
            <VBox class="sapUiMediumMarginEnd">
                <Image src="/img/car1.png" width="300px" height="200px" class="sapUiSmallMarginBottom"/>
                <Title text="{= '요금 : ' + ${fee} + ' 원'}" titleStyle="H2"/>
            </VBox>
            <VBox>
              <HBox height="100%" alignItems="Center" class="sapUiMediumMarginBottom">
                  <Label text="차량번호" labelFor="NumberPlate" design="Bold" class="sapUiTinyMarginEnd"/>
                  <Input id="NamePlate" type="Text" width="20em" value="{carinfoModel>/StoreBrname}" editable="false"/>
              </HBox>
              <HBox height="100%" alignContent="Center" class="sapUiMediumMarginBottom">
                  <Label text="차량구분" labelFor="TypeName" design="Bold" class="sapUiTinyMarginEnd"/>
                  <Input id="TypeName" type="Text" width="20em" value="{storeModel>/StoreBrname}" editable="false"/>
              </HBox>
              <HBox height="100%" alignContent="Center" class="sapUiMediumMarginBottom">
                  <Label text="차종분류" design="Bold" class="sapUiTinyMarginEnd"/>
                  <Input id="Brand" type="Text" width="20em" value="{storeModel>/StoreRegion}" editable="false"/>
              </HBox>
              <HBox height="100%" alignContent="Center" class="sapUiMediumMarginBottom">
                  <Label text="입차시간" design="Bold" class="sapUiTinyMarginEnd"/>
                  <Input id="EntryTime" type="Text" width="20em" value="{storeModel>/StorePhone}" editable="false"/>
              </HBox>
              <HBox height="100%" alignContent="Center" class="sapUiMediumMarginBottom">
                  <Label text="주차시간" design="Bold" class="sapUiTinyMarginEnd"/>
                  <Input id="ParkingTime" type="Text" width="20em" value="{ParkingTime}" editable="false"/>
              </HBox>
              <HBox justifyContent="End">
                <Button text="정산하기" press="onPay" />
              </HBox>
            </VBox>
        </HBox>
      </Panel>
</core:FragmentDefinition>