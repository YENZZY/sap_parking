<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
>
<!-- 정산된 차량 내역 목록 -->
<Panel width="100%">
	<MessageStrip text="주차장 이용 요금은 1시간 당 1000원입니다. 정산 후 5분 내에 출차해주세요." class="sapUiTinyMargin"/>
    <OverflowToolbar>
        <Label text="사용된 할인권 내역" design="Bold"/>
        <ToolbarSpacer/>
    </OverflowToolbar>
        <Table id="myticketTable"
            inset="false" 
            width="100%"       
            items="{
                path: 'myticketModel>/',
                sorter: {
                    path: 'DiscountTime'
                }
            }">
            <columns>
                <Column width="12rem" vAlign="Middle" hAlign="Center">
                    <Label text="할인권명" textAlign="Center" design="Bold"/>
                </Column>
                <Column width="12rem" vAlign="Middle" hAlign="Center">
                    <Label text="할인시간" textAlign="Center" design="Bold"/>
                </Column>
                <Column width="12rem" vAlign="Middle" hAlign="Center">
                    <Label text="사용 개수" textAlign="Center" design="Bold"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                <cells >
                    <Text id="discountname" text="{myticketModel>DiscountName}" textAlign="Center"/>
                    <Text id="discounttime" text="{myticketModel>DiscountTime}" textAlign="Center"/>
                    <Text id="usedcount" text="{myticketModel>UsedCount}" textAlign="Center"/>
                </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</core:FragmentDefinition>