<!-- 정산된 차량 내역 목록 -->
<Panel width="100%">
    <OverflowToolbar>
        <Label text="사용된 할인권 내역" design="Bold"/>
        <ToolbarSpacer/>
        <Button
            tooltip="Sort"
            icon="sap-icon://sort"
            press="onSort"
        />
    </OverflowToolbar>
        <Table id="myticketTable"
            inset="false" 
            width="100%"       
            items="{
                path: 'myticketModel>/',
                sorter: {
                    path: 'DiscountName'
                }
            }">
            <columns>
                <Column width="12rem" vAlign="Middle" hAlign="Center">
                    <Label text="할인권명" textAlign="Center" design="Bold"/>
                </Column>
                <Column width="12rem" vAlign="Middle" hAlign="Center">
                    <Label text="할인시간" textAlign="Center" design="Bold"/>
                </Column>
                <Column width="12rem" vAlign="Middle" hAlign="Center">
                    <Label text="사용 개수" textAlign="Center" design="Bold"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                <cells >
                    <Text	text="{myticketModel>DiscountName}" textAlign="Center"/>
                    <Text	text="{myticketModel>DiscountTime}" textAlign="Center"/>
                    <Text	text="{myticketModel>UsedCount}" textAlign="Center"/>
                </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>
</core:FragmentDefinition>