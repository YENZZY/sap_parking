<mvc:View controllerName="parking.controller.Page"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    height="100%"
    xmlns:f="sap.f"
	  xmlns:l="sap.ui.layout"
	  xmlns:c="sap.ui.core"
>	
	<Page id="page" title="CYE PARKING LOT">
    <!-- 차량 조회 내역  -->
    <f:DynamicPage
			id="dynamicPageId"
			stickySubheaderProvider="iconTabBar"
			class="sapUiNoContentPadding"
			toggleHeaderOnTitleClick="{/titleClickable}"
		>
			<!-- 다이나믹 페이지 제목 -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
							<HBox>
								<c:Icon src="sap-icon://insurance-car" size="1.5rem" class="sapUiTinyMarginEnd"/> 
								<Title text="차량 조회 내역"/>
							</HBox>
					</f:heading>
					<f:navigationActions>
					</f:navigationActions> 
				</f:DynamicPageTitle>
			</f:title>
		
			<!-- 다이나믹 페이지 헤더 -->
			<f:header>
				<f:DynamicPageHeader pinnable="false">
					<c:Fragment fragmentName="parking.view.Fragments.Page.CarInfoHeader" type="XML"/>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding" visible="true">
					<items>
						<IconTabFilter text="할인권 사용 내역" id="myTicket" visible="true">
							<c:Fragment fragmentName="parking.view.Fragments.Page.TicketItem" type="XML"/>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</f:content>
		</f:DynamicPage>
  </Page>
</mvc:View>