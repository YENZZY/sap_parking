<mvc:View controllerName="parking.controller.Main"
    height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
  	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout"
	xmlns:c="sap.ui.core"
>
	<Page id="page">
		<!-- 관리자 화면 -->
		<HBox visible="true" width="100%">
			<GenericTile class="sapUiTinyMargin" header="입차한 차량"  press="onPress"
			frameType="OneByHalf" subheader="20 대">
			</GenericTile>
			<GenericTile class="sapUiTinyMargin" header="일반 차량"  press="onPress"
				frameType="OneByHalf" subheader="10 대">
			</GenericTile>
			<GenericTile class="sapUiTinyMargin" header="정기권 차량"  press="onPress"
				frameType="OneByHalf" subheader="5 대">
			</GenericTile>
			<GenericTile class="sapUiTinyMargin" header="총 부과 요금"  press="onPress"
				frameType="OneByHalf" subheader="200000 원">
			</GenericTile>
		</HBox>
		
		<!-- 차량번호 조회 -->
		<!-- <core:Fragment fragmentName="parking.view.Fragments.Dynamic" type="XML"/> -->
			<f:DynamicPage id="dynamicPageId"
			stickySubheaderProvider="iconTabBar"
			class="sapUiNoContentPadding"
			toggleHeaderOnTitleClick="{/titleClickable}"
		>
			<!-- DynamicPage Title -->
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<!-- <Title text="CYE PARKING SYSTEM"/> -->
						<!-- <Button icon="sap-icon://car-rental" type="Transparent" press=""/>
							<c:Icon src="sap-icon://car-rental"/> -->
							<Title text="차량 조회" />
					</f:heading>
					<!-- <Button icon="sap-icon://decline" type="Transparent" press="onBack"/>-->
					<f:actions>
						<Button press="onRegister" visible="true" text=" 정기권 등록 " type="Emphasized" ariaHasPopup="Dialog"></Button>
						<Button press="onBuy" visible="true" text=" 할인권 등록 " type="Ghost" ariaHasPopup="Dialog"></Button>
						<!-- <Button text="수정" type="Emphasized"/>
						<Button text="삭제" type="Transparent"/>
						<Button text="Toggle Footer" type="Transparent" press="onToggleFooter"/> -->
					</f:actions>
					<!-- <f:navigationActions>
					</f:navigationActions>  -->
				</f:DynamicPageTitle>
			</f:title>
		
			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<c:Fragment fragmentName="parking.view.Fragments.SearchMain" type="XML"/>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding">
					<items>
						<IconTabFilter text="정산완료 차량" id="paidCar" visible="true">
							<c:Fragment fragmentName="parking.view.Fragments.PaidCarMain" type="XML"/>
						</IconTabFilter>
						<IconTabFilter text="정기권 차량" visible="true" id="ticketCar">
							<c:Fragment fragmentName="parking.view.Fragments.Vipcar" type="XML"/>
						</IconTabFilter>
						<IconTabFilter text="현황 분석" id="chart" visible="true">
							<c:Fragment fragmentName="parking.view.Fragments.Chart" type="XML"/>
						</IconTabFilter>
					</items>
				</IconTabBar>
			</f:content>
			<!-- DynamicPage Footer -->
			<!-- <f:footer>
				<OverflowToolbar>
					<Button icon="sap-icon://message-popup"
						text="{/messagesLength}"
						type="Emphasized"
						press="onMessageButtonPress"
						visible="{= !!${/messagesLength}}"/>
					<ToolbarSpacer/>
					<Button type="Accept" text="Accept"/>
					<Button type="Reject" text="Reject"/>
				</OverflowToolbar>
			</f:footer> -->
		</f:DynamicPage>
	</Page>
</mvc:View>
