<mvc:View controllerName="parking.controller.Main"
    height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
  	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout"
	xmlns:c="sap.ui.core"
>
	<Page id="page" title="CYE PARKING LOT">
		<!-- 차량번호 조회 -->
			<f:DynamicPage id="dynamicPageId"
			stickySubheaderProvider="iconTabBar"
			class="sapUiNoContentPadding"
			toggleHeaderOnTitleClick="{/titleClickable}"
		>
			<!-- DynamicPage Title -->
			<f:title >
				<f:DynamicPageTitle>
					<f:heading>
							<HBox>
								<c:Icon src="sap-icon://car-rental" size="1.5rem" class="sapUiTinyMarginEnd"/> 
								<Title text="CYE 주차장" class="sapUiTinyMarginEnd"/>
								<Button id="User" text="⇰ User" type="Accept" press="onUser" visible="true"/>
								<Button id="Admin" text="⇰ Admin" type="Accept" press="onAdmin" visible="false"/>
							</HBox>
					</f:heading>
					<!-- <Button icon="sap-icon://decline" type="Transparent" press="onBack"/>-->
					<f:actions>
						<Button id="registerBtn" press="onRegister" visible="true" text="정기 차량 등록" type="Accept" ariaHasPopup="Dialog"/>
						<Button id="removeBtn" press="onRemove" visible="true" text="정기 차량 삭제 " type="Reject" ariaHasPopup="Dialog"/>
							<ToolbarSeparator/>
						<Button id="buyBtn" press="onBuy" visible="true" text=" 할인권 등록 " type="Ghost" ariaHasPopup="Dialog"/>
					</f:actions>
					<f:expandedContent>
						<VBox>
							<Label text="상호명 : CYE 주차장"/>
							<Label text="주차 요금 : 1시간 1000원"/>
							<Label text="전화 번호 : 02-1004-0522"/>
							<Label text="주소 : 서울시 서초구 남부순환로 2406 CYE 주차장"/>
						</VBox>
					</f:expandedContent>
				</f:DynamicPageTitle>
			</f:title>

			<!-- DynamicPage Header -->
			<f:header>
				<f:DynamicPageHeader id="ChartMain" visible="true" pinnable="false">
					<c:Fragment fragmentName="parking.view.Fragments.Main.ChartMain" type="XML"/>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<IconTabBar id="iconTabBar" class="sapUiResponsiveContentPadding" select="onRefresh">
					<items>
						<IconTabFilter key="searchCar" text="차량 조회" id="searchCar" visible="true">
							<c:Fragment fragmentName="parking.view.Fragments.Main.SearchHeader" type="XML"/>
						</IconTabFilter>
						<IconTabFilter key="paidCar" text="정산 완료 차량" id="paidCar" visible="true">
							<c:Fragment fragmentName="parking.view.Fragments.Main.PaidCarItem" type="XML"/>
						</IconTabFilter>
						<IconTabFilter key="entryCar" text="입차 차량" id="entryCar" visible="true">
							<c:Fragment fragmentName="parking.view.Fragments.Main.EntryCarItem" type="XML"/>
						</IconTabFilter>
						<IconTabFilter key="ticketCar" text="정기 차량" id="ticketCar" visible="true" >
							<c:Fragment fragmentName="parking.view.Fragments.Main.VipcarItem" type="XML"/>
						</IconTabFilter>
						<!-- <IconTabFilter text="현황 차트" visible="true" id="chartItem">
							<c:Fragment fragmentName="parking.view.Fragments.Main.ChartItem" type="XML"/>
						</IconTabFilter> -->
					</items>
				</IconTabBar>
			</f:content>
		</f:DynamicPage>
	</Page>
</mvc:View>
