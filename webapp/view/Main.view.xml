<mvc:View controllerName="parking.controller.Main"
    height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
  	xmlns:core="sap.ui.core"
>
	<Page id="page">
	<Panel height="100%">
		<OverflowToolbar >
			<Title text="정산할 차량 조회"/>
			<ToolbarSpacer/>
			<Button press="onBuy" visible="true" text="할인권 구매" type="Ghost"></Button>
		</OverflowToolbar>
		<Toolbar width="100%" style="Clear">
			<ToolbarSpacer/>
				<SearchField id="findNumber" width="50%" search="onSearch" placeholder="차량번호 4자리를 입력해주세요."/>
			<ToolbarSpacer/>
		</Toolbar>

		<!-- 차량번호 조회 -->
			<VBox width="100%" >
			<HBox width="100%" justifyContent="Center">
				<Button text="1" press="onClick"></Button>
				<Button text="2" press="onClick"></Button>
				<Button text="3" press="onClick"></Button>
			</HBox>
			<HBox width="100%" justifyContent="Center">
				<Button text="4" press="onClick"></Button>
				<Button text="5" press="onClick"></Button>
				<Button text="6" press="onClick"></Button>
			</HBox>
			<HBox width="100%" justifyContent="Center">
				<Button text="7" press="onClick"></Button>
				<Button text="8" press="onClick"></Button>
				<Button text="9" press="onClick"></Button>
			</HBox>
			<HBox width="100%" justifyContent="Center">
				<Button text="X" press="onClick"></Button>
				<Button text="0" press="onClick"></Button>
				<Button text="O" press="onClick"></Button>
			</HBox>
			</VBox>
			<OverflowToolbar>
							<Title text="정산된 차량 내역 목록" level="H2"/>
				</OverflowToolbar>
		<!-- 정산된 차량 내역 목록 -->
			<Table id="CompleteTable"
				inset="false"
				items="{
					path: 'carinfoModel>/',
					sorter: {
						path: 'NumberPlate'
					}
				}">
						<Title text="정산된 차량 내역 목록" level="H2"/>
				<columns>
				<Column
				width="12em">
				<Text text="차량번호" />
				</Column>
				<Column
				width="12em">
				<Text text="차량구분" />
				</Column>
				<Column
				width="12em">
				<Text text="차량종류" />
				</Column>
				<Column
				width="12em">
				<Text text="출차시간" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
				<cells>
				<Text	text="{carinfoModel>NumberPlate}" />
				<Text	text="{carinfoModel>TypeName}" />
				<Text	text="{carinfoModel>Brand}" />
				<Text	text="{carinfoModel>ExitTime}" />
				</cells>
				</ColumnListItem>
			</items>
			</Table>
		</Panel>
	</Page>
</mvc:View>
