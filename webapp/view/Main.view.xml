<mvc:View controllerName="parking.controller.Main"
    height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
  	xmlns:core="sap.ui.core"
>
	<Page id="page">
	<Panel height="100%">
		<OverflowToolbar >
			<Title text="정산할 차량 조회" titleStyle="H4"/>
			<ToolbarSpacer/>
			<Button press="onRegister" visible="true" text=" 정기권 등록 " type="Emphasized" ariaHasPopup="Dialog"></Button>
			<Button press="onBuy" visible="true" text=" 할인권 구매 " type="Ghost" ariaHasPopup="Dialog"></Button>
		</OverflowToolbar>
		<Toolbar width="100%" style="Clear" class="sapUiSmallMargin">
			<ToolbarSpacer/>
			<Input id="findNumber" width="50%" placeholder="차량번호 4자리를 입력해주세요."/>
        	<core:Icon src="sap-icon://search" press="onSearch" size="1.5em" color="#0484fc"/>
			<ToolbarSpacer/>
		</Toolbar>

		<!-- 차량번호 조회 -->
			<VBox width="100%" class="sapUiLargeMarginBottom">
			<HBox width="100%" justifyContent="Center">
				<Button text="1" press="onClick"></Button>
				<Button text="2" press="onClick"></Button>
				<Button text="3" press="onClick"></Button>
			</HBox>
			<HBox width="100%" justifyContent="Center">
				<Button text="4" press="onClick"></Button>
				<Button text="5" press="onClick"></Button>
				<Button text="6" press="onClick"></Button>
			</HBox>
			<HBox width="100%" justifyContent="Center">
				<Button text="7" press="onClick"></Button>
				<Button text="8" press="onClick"></Button>
				<Button text="9" press="onClick"></Button>
			</HBox>
			<HBox width="100%" justifyContent="Center">
				<Button text="⌫" press="onClear"></Button>
				<Button text="0" press="onClick"></Button>
				<Button text="⏎" press="onSearch"></Button>
			</HBox>
			</VBox>
			<OverflowToolbar>
				<Title text="정산된 차량 내역 목록" titleStyle="H4"/>
				</OverflowToolbar>
		<!-- 정산된 차량 내역 목록 -->
			<Table id="CompleteTable"
				inset="false"
				items="{
					path: 'paidModel>/',
					sorter: {
						path: 'NumberPlate'
					}
				}">
				<columns>
				<Column
				width="12em">
				<Text text="차량번호" />
				</Column>
				<Column
				width="12em">
				<Text text="차량구분" />
				</Column>
				<Column
				width="12em">
				<Text text="차량종류" />
				</Column>
				<Column
				width="12em">
				<Text text="출차시간" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
				<cells>
				<Text	text="{paidModel>NumberPlate}" />
				<Text	text="{paidModel>TypeName}" />
				<Text	text="{paidModel>Brand}" />
				<Text	text="{paidModel>ExitTime}" />
				</cells>
				</ColumnListItem>
			</items>
			</Table>
		</Panel>
	</Page>
</mvc:View>
