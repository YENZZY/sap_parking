<mvc:View xmlns:f="sap.f" controllerName="parking.controller.Main"
    height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
  	xmlns:core="sap.ui.core"
>
	<Page id="page">
		<Panel height="100%">
		<!-- 관리자 화면 -->
		<HBox visible="true" width="100%">
			<GenericTile class="sapUiTinyMargin" header="입차한 차량"  press="onPress"
			frameType="OneByHalf" subheader="20 대">
			</GenericTile>
			<GenericTile class="sapUiTinyMargin" header="일반 차량"  press="onPress"
				frameType="OneByHalf" subheader="10 대">
			</GenericTile>
			<GenericTile class="sapUiTinyMargin" header="정기권 차량"  press="onPress"
				frameType="OneByHalf" subheader="5 대">
			</GenericTile>
			<GenericTile class="sapUiTinyMargin" header="총 부과 요금"  press="onPress"
				frameType="OneByHalf" subheader="200000 원">
			</GenericTile>
		</HBox>
		
		<!-- 차량번호 조회 -->
		<core:Fragment fragmentName="parking.view.Fragments.Dynamic" type="XML"/>
		</Panel>
	</Page>
</mvc:View>
